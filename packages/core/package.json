{
  "name": "@blro/body-scroll-lock",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blro0319/body-scroll-lock.git",
    "directory": "packages/core"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/body-scroll-lock.umd.cjs",
  "module": "dist/body-scroll-lock.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/body-scroll-lock.js",
      "require": "./dist/body-scroll-lock.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build && npm run build:types",
    "build:types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist/types"
  },
  "devDependencies": {
    "@tsconfig/node20": "^1.0.1",
    "@types/node": "^20.1.5",
    "typescript": "^5.0.4",
    "vite": "^4.3.6"
  }
}

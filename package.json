{
  "private": true,
  "name": "@blro/body-scroll-lock",
  "version": "0.0.0",
  "license": "MIT",
  "repository": "https://github.com/blro0319/body-scroll-lock",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "vitepress": "^1.0.0-alpha.75"
  },
  "scripts": {
    "build": "npm run core:build && npm run vue:build && npm run docs:build",
    "core:dev": "npm run dev --workspaces=packages/core",
    "core:build": "npm run build --workspaces=packages/core",
    "vue:dev": "npm run dev --workspaces=packages/vue",
    "vue:build": "npm run build --workspaces=packages/vue",
    "docs:dev": "vitepress dev docs --host",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  }
}
